
<h1>Order Information</h1>

<div class="container order-info">
  <div class="order-info-id">
    <h3 class="order-id">Order ID: <%= @order.id %></h3>
    <strong>Total Price: </strong><%= number_to_currency((@order.product.price * 1.13).to_f)%>
  </div>


  <div class="row order-info-row">
    <div class="col-sm">
      <img class="show-order-product-image" src="<%= @order.product.image_url %>">
    </div>
    <div class="col-sm order-side-bar">
      <div class="order-info-details">
        <h2>Product Name: <%= @order.product.name %></h2>
        <h2>Product Price: <%= number_to_currency(@order.product.price.to_f) %></h2>
      </div>
    </div>
  </div>


</div>
