<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p class="comments-form">
      <%= f.label :body, "Comments", class:"sr-only" %><br>
      <%= f.text_area :body, class: "form-control comment-body", placeholder: "type comment here" %>
    </p>
      <div class="rating star-rating"></div>
    <p class="comments-submit">
      <%= f.submit "Submit", class:"btn btn-secondary" %>
    </p>
  <% end %>
<% end %>
