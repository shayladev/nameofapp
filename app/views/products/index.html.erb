<p id="notice"><%= notice %></p>

<h1>Products</h1>

<section class="products-all container">


  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-4">
          <div class="product-card">
            <img class="product-image" src="<%= product.image_url %>" alt="">
            <h3 class="product-name"><%= link_to product.name, product %></h3>
            <p class="product-color"><%= product.colour %></p>
            <h2 class="product-price">$<%= product.price %></h2>
            <p><%= link_to 'Show', product %> | <span><%= link_to 'Edit', edit_product_path(product) %></span> |
            <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
      <button type="button" class="btn btn-secondary new-product-button" name="button"><%= link_to 'Add New Product', new_product_path %></button>
  </div>


</section>
