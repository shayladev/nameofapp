<%= flash[:notice] %>
<div class="contact-page">
  <div class="container contact-box">
    <div class="contact">
      <h1>Contact Us</h1>
      <p>Address: Chausseestrasse 3014, Mitte, Berlin, DE </p>
      <p>Phone: (+49 30) 19 4 49 </p>
      <p>Instagram: @berlinbikes</p>

      <div class="container contact-form">
        <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
          <div class="form-group">
            <%= form.label :name, class:"sr-only" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
          </div>
          <div class="form-group">
            <%= form.label :email, class:"sr-only" %>
            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
          </div>
          <div class="form-group">
            <%= form.label :message, class:"sr-only" %>
            <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
          </div>
        <%= form.submit "Send", class: "form_label btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
    </div>
